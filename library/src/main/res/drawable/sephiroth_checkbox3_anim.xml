    <!-- TRANSITIONS BETWEEN STATES -->

    <!-- checked to indeterminate -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_checked_to_indeterminate"
            android:fromId="@+id/checked"
            android:toId="@+id/indeterminate"/>

    <!-- indeterminate to unchecked -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_indeterminate_to_unchecked"
            android:fromId="@+id/indeterminate"
            android:toId="@+id/unchecked"/>

    <!-- unchecked to indeterminate -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_unchecked_to_indeterminate"
            android:fromId="@+id/unchecked"
            android:toId="@+id/indeterminate"/>

    <!-- indeterminate to checked -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_indeterminate_to_checked"
            android:fromId="@+id/indeterminate"
            android:toId="@+id/checked"/>


    <!-- unchecked to checked -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_unchecked_to_checked"
            android:fromId="@+id/unchecked"
            android:toId="@+id/checked"/>

    <!-- checked to unchecked -->
    <transition
            android:drawable="@drawable/sephiroth_checkbox3_transition_checked_to_unchecked"
            android:fromId="@+id/checked"
            android:toId="@+id/unchecked"/>
